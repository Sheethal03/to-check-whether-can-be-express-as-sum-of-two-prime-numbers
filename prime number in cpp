#include<iostream>
using namespace std;
bool checkprime(int n)
{
	int i;
	bool isprime = true;
	if(n==0||n=1)
	{
		is prime=false;
	else{
		for(i=2;i<n/2;++i)
		{
			if(n% i==0)
			is prime=false;
			break;
		}
	}
}
return is prime;
{

int main()
int n,i;
bool flag=false;
cout<<"enter a positive integer:";
cin>>n;
for(i=2;i<=n/2;++i)
{
    if (check prime(i)){
	if (check prime(n-i)){
	cout<<n<<"="<<i<<"+"<<n-i<<endl;
	flag=true;
}
}

}
if(!flag)
cout<<n<<"can't be expressed a sum of two prime numbers"
return 0;
}
